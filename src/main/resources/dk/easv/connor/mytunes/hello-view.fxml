<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1000.0" spacing="20.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.connor.mytunes.gui.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <HBox prefHeight="40.0" prefWidth="900.0">
         <children>
            <Button fx:id="reverseSongButton" mnemonicParsing="false" onAction="#onReverseSongButtonClick" prefHeight="40.0" prefWidth="50.0" text="&lt;&lt;">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="playSongButton" mnemonicParsing="false" onAction="#onPlaySongButtonClick" prefHeight="40.0" prefWidth="50.0" text="Play">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="skipSongButton" mnemonicParsing="false" onAction="#onSkipSongButtonClick" prefHeight="40.0" prefWidth="50.0" text="&gt;&gt;">
               <HBox.margin>
                  <Insets right="500.0" />
               </HBox.margin>
            </Button>
            <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="40.0" prefWidth="60.0" text="Filter: " />
            <TextField fx:id="filterSongText" prefHeight="40.0" prefWidth="150.0">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="searchFilterButton" mnemonicParsing="false" onAction="#onSearchFilterButtonClick" prefHeight="40.0" prefWidth="60.0" text="Search" />
         </children>
      </HBox>
      <HBox prefHeight="50.0" prefWidth="900.0">
         <children>
            <Slider fx:id="volumeSlider" prefHeight="50.0" prefWidth="170.0">
               <HBox.margin>
                  <Insets right="200.0" />
               </HBox.margin>
            </Slider>
            <Label prefHeight="50.0" prefWidth="250.0" />
         </children>
      </HBox>
      <HBox prefHeight="40.0" prefWidth="900.0">
         <children>
            <Label alignment="BOTTOM_LEFT" prefHeight="40.0" prefWidth="100.0" text="Playlists">
               <HBox.margin>
                  <Insets right="130.0" />
               </HBox.margin>
            </Label>
            <Label alignment="BOTTOM_LEFT" prefHeight="40.0" prefWidth="100.0" text="Songs on playlist">
               <HBox.margin>
                  <Insets right="215.0" />
               </HBox.margin>
            </Label>
            <Label alignment="BOTTOM_LEFT" prefHeight="40.0" prefWidth="100.0" text="Songs" />
         </children>
      </HBox>
      <HBox prefHeight="500.0" prefWidth="900.0">
         <children>
            <ListView fx:id="playlistList" prefHeight="200.0" prefWidth="200.0">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </ListView>
            <ListView fx:id="songPlaylistList" prefHeight="200.0" prefWidth="200.0">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </ListView>
            <Button fx:id="songToPlaylistButton" mnemonicParsing="false" onAction="#onSongToPlaylistButtonClick" prefHeight="40.0" prefWidth="50.0" text="&lt;">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </Button>
            <ListView fx:id="songList" prefHeight="200.0" prefWidth="420.0" />
         </children>
      </HBox>
      <HBox prefHeight="40.0" prefWidth="900.0">
         <children>
            <Button fx:id="newPlaylistButton" mnemonicParsing="false" onAction="#onNewPlaylistButtonClick" prefHeight="40.0" prefWidth="60.0" text="New">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="editPlaylistButton" mnemonicParsing="false" onAction="#onEditPlaylistButtonClick" prefHeight="40.0" prefWidth="60.0" text="Edit">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="deletePlaylistButton" mnemonicParsing="false" onAction="#onDeletePlaylistButtonClick" prefHeight="40.0" prefWidth="60.0" text="Delete">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="upSongPlaylistButton" mnemonicParsing="false" onAction="#onUpSongPlaylistButtonClick" prefHeight="40.0" prefWidth="50.0" text="Up">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="downSongPlaylistButton" mnemonicParsing="false" onAction="#onDownSongPlaylistButtonClick" prefHeight="40.0" prefWidth="50.0" text="Down">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="deleteSongPlaylistButton" mnemonicParsing="false" onAction="#onDeleteSongPlaylistButtonClick" prefHeight="40.0" prefWidth="60.0" text="Delete">
               <HBox.margin>
                  <Insets right="110.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="newSongButton" mnemonicParsing="false" onAction="#onNewSongButtonClick" prefHeight="40.0" prefWidth="60.0" text="New">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="editSongButton" mnemonicParsing="false" onAction="#onEditSongButtonClick" prefHeight="40.0" prefWidth="60.0" text="Edit">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="deleteSongButton" mnemonicParsing="false" onAction="#onDeleteSongButtonClick" prefHeight="40.0" prefWidth="60.0" text="Delete">
               <HBox.margin>
                  <Insets right="160.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="closeApplicationButton" mnemonicParsing="false" onAction="#onCloseApplicationButtonClick" prefHeight="40.0" prefWidth="60.0" text="Close" />
         </children>
      </HBox>
   </children>
</VBox>
